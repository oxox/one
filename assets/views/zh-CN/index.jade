mixin widget(obj)
    div.widget.widget2x2.widget_purple.widget_link.animation.unloaded(
        data-url="#{obj.appUrl}",
        data-theme="purple",
        data-name="#{obj.name}",
        id="widget_#{obj.name}"
        )
        div.widget_content
            div.main(style="background-image:url('#{obj.icon}');")
                span #{obj.name}

if cntFile
each obj in files
    +widget(obj.data)
else
    div.alert No Apps found!